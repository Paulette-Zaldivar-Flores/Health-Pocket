<div class = "container-sm p-4 mt-3">
  <h1 class = "user-header">Medical History</h1>
  <%= simple_form_for(@medical_history, html: { class: "user-form" }) do |f| %>
    <%= f.input :disease %>
    <%= f.input :start_date, as: :date, html5: true %>
    <%= f.input :end_date, as: :date, html5: true %>
    <%= f.button :submit, "Submit", class: "button" %>
    <%= link_to "Back", @user_path, class: "button back-button" %>
  <% end %>
</div>

<div class="container">
  <% if @medical_histories.nil? %>
    <p>You haven't added any diseases yet.</p>
  <% else %>
    <% @medical_histories.each do |disease| %>
      <p><%= disease.disease %></p>
      <p><%= disease.start_date %></p>
      <p><%#= disease.end_date %></p>
    <% end %>
  <% end %>
</div>
