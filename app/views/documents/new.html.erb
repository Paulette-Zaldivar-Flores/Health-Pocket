<%= simple_form_for @document do |f| %>
  <%= f.input :doctor_name %>
  <%= f.input :country %>
  <%= f.input :date, html5: true %>
  <%= f.input :doc_type, collection: Document::DOC_TYPES, label: 'Add category' %>
  <%= f.input :comment %>
  <%= f.input :photo, as: :file %>
  <%= f.input :qr_code %>
  <%= f.button :submit, "Upload Document" %>
<% end %>
