<div class = "container-sm p-4 mt-3">
<h1>Body Measurements</h1>
<%= simple_form_for @user do |f| %>
  <%= f.input :height %>
  <%= f.input :weight %>
  <%= f.input :body_fat%>
  <%= f.input :chest%>
  <%= f.input :arms %>
  <%= f.input :legs%>
  <%= f.button :submit, "Submit", class: "button" %>
<% end %>
