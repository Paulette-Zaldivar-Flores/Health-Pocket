 <div class = "container">
<div>
  <div>
    <% if params[:document].present? && params[:document] == "Referral Letters" %>
      <% @documents.each do |document| %>
        <h1><%= document.doc_type %></h1>
        <p><%= document.date %><%= document.doctor_name %><%= document.pays %></p>
      <% end %>
    <% elsif params[:document].present? && params[:document] == "Immunization Records" %>
        <h1>Immunization Records</h1>
      <% @documents.each do |document| %>
        <p><%= document.date %><%= document.doctor_name %><%= document.pays %></p>
      <% end %>
    <% elsif params[:document].present? && params[:document] == "Pathology Records" %>
      <% @documents.each do |document| %>
        <h1><%= document.doc_type %></h1>
        <p><%= document.date document.doctor_name document.pays %></p>
      <% end %>
    <% elsif params[:document].present? && params[:document] == "Prescription Records" %>
      <% @documents.each do |document| %>
        <h1><%= document.doc_type %></h1>
        <p><%= document.date document.doctor_name document.pays %></p>
      <% end %>
    <% elsif params[:document].present? && params[:document] == "Radiology Records" %>
      <% @documents.each do |document| %>
        <h1><%= document.doc_type %></h1>
        <p><%= document.date document.doctor_name document.pays %></p>
      <% end %>

    <% else %>

    <div class = "upload-card mt-5">
    <div>
      <p>Upload a Document</p>
      <%= link_to "Upload", new_document_path, class: "button upload-button" %>
      </div>
    </div>
    <div class = "document-upload-section">
      <div class = "flex-container-document">
        <%= link_to documents_path(document: "Referral Letters"), class: "link" do %>
          <p><span class="material-symbols-outlined">clinical_notes</span>Referral Letters</p>
        <% end %>
      </div>
      <div class = "flex-container-document">
         <%= link_to documents_path(document: "Immunization Records"), class: "link" do %>
          <p><span class="material-symbols-outlined">syringe</span>Immunization Records</p>
          <% end %>
        </div>
        <div class = "flex-container-document">
         <%= link_to documents_path, class: "link" do %>
        <p><span class="material-symbols-outlined">labs</span>
        Pathology Records</p>
        <% end %>
        </div>
        <div class = "flex-container-document">
        <%= link_to documents_path, class: "link" do %>
        <p><span class="material-symbols-outlined">pill</span>
        Prescription Records</p>
        <% end %>
        </div>
        <div class = "flex-container-document">
        <%= link_to documents_path, class: "link" do %>
        <p><span class="material-symbols-outlined">radiology</span>
        Radiology Reports</p>
        <% end %>
        </div>
    <% end %>
  </div>
</div>
