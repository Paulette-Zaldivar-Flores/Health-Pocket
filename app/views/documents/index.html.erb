<div class = "container">
  <div>
    <% if params[:document].present? && params[:document] == "Referral Letters" %>
      <h1>Referral Letters</h1>
      <% @documents.each do |document| %>
        <p><%= document.date %><%= document.doctor_name %><%= document.country</p> %>
      <% end %>
    <% elsif params[:document].present? && params[:document] == "Immunization Records" %>
      <h1>Immunization Records</h1>
      <% @documents.each do |document| %>
        <p><%= document.date %><%= document.doctor_name %><%= document.country %></p>
      <% end %>
    <% elsif params[:document].present? && params[:document] == "Pathology Records" %>
      <h1>Pathology Records</h1>
      <% @documents.each do |document| %>
        <p><%= document.date %><%= document.doctor_name %><%= document.country %></p>
      <% end %>
    <% elsif params[:document].present? && params[:document] == "Prescription Records" %>
      <h1>Prescription Records</h1>
      <% @documents.each do |document| %>
        <p><%= document.date %><%= document.doctor_name %><%= document.country %></p>
      <% end %>
    <% elsif params[:document].present? && params[:document] == "Radiology Reports" %>
      <h1>Radiology Reports</h1>
      <% @documents.each do |document| %>
        <p><%= document.date %><%= document.doctor_name %><%= document.country %></p>
      <% end %>

    <% else %>
      <div class = "upload-card mt-5">
        <div>
          <h5>Upload Document</h5>
          <%= link_to "Upload", new_document_path, class: "button" %>
        </div>
      </div>
      <div>
        <%= link_to documents_path(document: "Referral Letters"), class: "link" do %>
          <p><span class="material-symbols-outlined">clinical_notes</span> Referral Letters</p>
        <% end %>
        <%= link_to documents_path(document: "Immunization Records"), class: "link" do %>
          <p><span class="material-symbols-outlined">syringe</span> Immunization Records</p>
        <% end %>
        <%= link_to documents_path(document: "Pathology Records"), class: "link" do %>
          <p><span class="material-symbols-outlined">labs</span> Pathology Records</p>
        <% end %>
        <%= link_to documents_path(document: "Prescription Records"), class: "link" do %>
          <p><span class="material-symbols-outlined">pill</span> Prescription Records</p>
        <% end %>
        <%= link_to documents_path(document: "Radiology Reports"), class: "link" do %>
          <p><span class="material-symbols-outlined">radiology</span> Radiology Reports</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
